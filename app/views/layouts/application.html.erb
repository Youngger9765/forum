<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<%if flash[:notice].present? %>
				<div class="alert alert-success" role="alert">
					<%= flash[:notice] %>
				</div>
			<%end%>
			<%if flash[:alert].present? %>
				<div class="alert alert-danger" role="alert">
					<%= flash[:alert] %>
				</div>
			<%end%>
			<div id="fb-root"></div>

			<% if current_user %>
				Hello! <%= image_tag current_user.gravatar_url %>
				<%= link_to current_user.email, profile_path(current_user.id) %>
          		<%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
          		<%= link_to('修改個人資料', edit_registration_path(:user)) %>
      		<% else %>
          		<%= link_to('註冊', new_registration_path(:user)) %> |
          		<%= link_to('登入', new_session_path(:user)) %>
      		<% end %>
      		<%if current_user && current_user.admin?%>
				<%= link_to "ADMIN", admin_topics_path,:class => "btn btn-default" %>
			<% end %>
      		<hr>

      		<script>(function(d, s, id) {
				  var js, fjs = d.getElementsByTagName(s)[0];
				  if (d.getElementById(id)) return;
				  js = d.createElement(s); js.id = id;
				  js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.4&appId=1473500716238271";
				  fjs.parentNode.insertBefore(js, fjs);
				}(document, 'script', 'facebook-jssdk'));</script>
			<div class="fb-like"></div>

			<%= yield %>
      		<hr>

			
			

		</div>

	</div>

</div>







</body>
</html>
