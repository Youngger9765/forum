
<table class="table">
	<tr>
		<td>Email</td>
		<td>Created Time</td>
		<td>ID</td>
		<td>Role</td>
	</tr>

	<% @user.each do |u| %>
	<tr> 
		<td><%= u.email%></td> 
		<td><%= u.created_at%></td> 
		<td><%= u.id%></td> 
		<td><%= u.role%></td>
	<%end%>
	</tr>

</table>

<table class="table">
<h2>未分類文章</h2>
	<tr>
		<td>Poster</td>
		<td>Created Time</td>
		<td>Topic ID</td>
		<td>Control</td>
		
	</tr>

	<% @topics.each do |t| %>
	<tr> 
		<td><%= t.user_email%></td> 
		<td><%= t.created_at%></td> 
		<td><%= t.id%></td>
		<td>
			<%= form_for [:admin, t], :method => :patch do |f| %>
			<%# method 可以省略%>
				<div class="form-group">

					<%=f.label :category_id, "Category"%>
					<%=f.select :category_id, Category.all.map{ |x| [x.name, x.id]}, :class => "form-control"%>
					<%= f.submit "Submit",:class => "btn btn-primary" %>
				</div>

			    
			<% end %>
		</td> 		
	<%end%>
	</tr>

</table>



<p>	
<%= link_to "Topics Index", topics_path%>
</p>
<hr>