<h1>Title:<%= @topic.name %></h1>


<ul>
<li>Category:<%= @topic.category_name %></li>
<li>Author:<%= @topic.user_email%></li>
<li>Status:<%= @topic.status%></li>
<li>Tags: 
	<% @topic.tags.each do |ta|%>
		<%= ta.name %>,
	<%end%>
</li>
<li>Content:<%= @topic.content %></li> 

</ul>

<% if @topic.logo.exists? %>
	<%= link_to image_tag(@topic.logo.url(:thumb)),@topic.logo.url%>
<%end%>


<h3>Feedbacks:</h3>
<table class="table">
<tr>
	<td>Feedbacker</td>
	<td>Content</td>
	<td>Feedback Time</td>
	<td>Control</td>
	<td>Status</td>
</tr>

<% @feedbacks.each do |fe| %>
<tr>
	<td>
		<%= image_tag current_user.gravatar_url, :size =>"30x30" %>
		<%= fe.user_email%>
	</td>
	<td>
		<%= fe.content%>
		<% if fe.logo.exists? %>
			<%= link_to image_tag(fe.logo.url(:thumb)),fe.logo.url%>
		<%end%>
	</td>
	<td><%= fe.created_at%></td>

	<td>
	<% if current_user == nil %>
		<%="XXX"%>
	<% elsif fe.user_email == current_user.email  || current_user.role == "admin"%>
		<%= link_to "Edit", edit_topic_feedback_path(@topic,fe),:class => "btn btn-default"%>
		<%= link_to "Delete", topic_feedback_path(@topic,fe), :method => :delete, :data => {:confirm => "Are you sure?"},:class => "btn btn-danger"%>
	<%end%>
	</td>
	<td>
		<%= fe.status %>
	</td>

</tr>



<%end%>



</table>

<%= form_for @feedback, :url => topic_feedbacks_path(@topic), :class =>"form" do |fe|%>
	
	<div class="form-group">
		<%=fe.label :content, "Content"%>
		<%=fe.text_area :content, :class => "form-control"%>
	</div>

	<div class="form-group">
		<%=fe.label :status, "Status"%>
		<%=fe.select :status,[["Published","published"],["Draft","draft"]]%>
	</div>

	<div class="form-group">
	    <%=fe.label :logo, "LOGO"%>
	    <%=fe.file_field :logo%>
	</div>

	<%=fe.submit "Create", :class => "btn btn-primary"%>

<%end%>



