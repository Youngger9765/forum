<div class="container">
	
</div>
</div>

<ul>


<li>Category: <%= @topic.category_name %></li>
<li>Author:
	<%= image_tag @topic.user.gravatar_url, :size => "30x30" %>
	<%= link_to @topic.user.username, profile_path(@topic.user)%>
</li>
<li>Status: <%= @topic.status%></li>
<li>Tags: 
	<% @topic.tags.each do |ta|%>
		<%= ta.name %>,
	<%end%>
</li>
<li>Content: <%= @topic.content %></li> 
</ul>


<% if @topic.logo.exists? %>
	<%= link_to image_tag(@topic.logo.url(:thumb)),@topic.logo.url%>
<%end%>

	<%= render :partial => 'like' %>

<h3>Feedbacks</h3>
<table class="table" id="feedbacks-table">
	
	<tr>
    <td>Feedbacker</td>
    <td>Content</td>
    <td>Feedback Time</td>
    <td>Control</td>
    <td>Status</td>
  </tr>

<% @feedbacks.each do |fe| %>
  <tr id="feedback-<%= fe.id %>">
    <td>
      <%= link_to profile_path(fe.user) do %>
         <%= image_tag fe.user.gravatar_url, :size =>"30x30" %>
         <%= fe.user.username %>
      <% end %>

    </td>
    <td>
      <%= fe.content%>
      <% if fe.logo.exists? %>
        <%= link_to image_tag(fe.logo.url(:thumb)),fe.logo.url%>
      <%end%>
    </td>
    <td><%= fe.created_at%></td>

    <td>
    <% if current_user && ( fe.user == current_user || current_user.admin? ) %>
      <%= link_to "Edit", edit_topic_feedback_path(@topic,fe),:class => "btn btn-default"%>
      <%= link_to "Delete", topic_feedback_path(@topic,fe), :remote => true, :method => :delete, :class => "btn btn-danger"%>
    <% end %>
    </td>
    <td>
      <%= fe.status %>
    </td>
  </tr>
<%end%>

</table>

<%= form_for [@topic, @feedback], :class =>"form",:remote => true do |fe|%>
	
	<div class="form-group">
		<%=fe.label :content, "Content"%>
		<%=fe.text_area :content, :class => "form-control", :id => "feedbacks-content-area" %>
	</div>

	<div class="form-group">
	    <%=fe.label :logo, "LOGO"%>
	    <%=fe.file_field :logo,:id => "feedbacks-logo-area"%>
	</div>

	<%=fe.submit "Create", :class => "btn btn-primary"%>

<%end%>



<hr>
<%= link_to "Topics Index", topics_path%>

<%= content_for :head do %>
    <%= tag(:meta, :content => @topic.name, :property => "og:title") %>
    <%= tag(:meta, :content => "article", :property => "og:type") %>
    <%= tag(:meta, :content => topic_url(@topic), :property => "og:url") %>
<% end %>